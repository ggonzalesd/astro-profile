---
import MiddleSection from '../MiddleSection.astro';
import SvgLinkedin from '@/components/icons/SvgLinkedin.astro';
import SvgGithub from '@/components/icons/SvgGithub.astro';
---

<footer class='text-white'>
  <MiddleSection type='line-left' class='text-sky-700' />
  <div class='bg-sky-700 pb-4'>
    <section class='mx-auto flex w-full max-w-screen-lg flex-col px-2'>
      <!-- More info -->
      <div class='flex flex-col justify-between md:flex-row'>
        <div>
          <div class='flex justify-center p-2 text-lg font-bold'>
            <span>Logo</span>
          </div>
          <div class='flex w-full justify-center gap-2'>
            <a
              class='size-6'
              href='https://www.linkedin.com/in/gegonzalesd'
              target='_blank'
            >
              <SvgLinkedin />
              <span class='sr-only'>Linkedin</span>
            </a>
            <a
              class='size-6'
              href='https://github.com/ggonzalesd'
              target='_blank'
            >
              <SvgGithub />
              <span class='sr-only'>github</span>
            </a>
          </div>
        </div>
        <span>x</span>
      </div>
      <!-- All Rights -->
      <div></div>
    </section>
  </div>
</footer>
