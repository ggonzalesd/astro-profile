---
import { getI18N } from '@/i18n';

import LanguageSelector from './LanguageSelector.astro';

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const routes = [
  {
    route: i18n.app_nav_route_home,
    display: i18n.app_nav_names_home,
  },
  {
    route: i18n.app_nav_route_projects,
    display: i18n.app_nav_names_projects,
  },
];
---

<header class='fixed left-0 top-0 h-12 w-full py-2'>
  <div
    class='mx-auto flex h-full max-w-screen-lg items-center justify-between rounded-md bg-zinc-300 px-2'
  >
    <span>My data</span>
    <nav class='flex gap-2'>
      {
        routes.map(({ route, display }) => (
          <a class='rounded-md bg-zinc-400 px-2 text-white' href={route}>
            {display}
          </a>
        ))
      }
    </nav>
    <LanguageSelector />
  </div>
</header>
