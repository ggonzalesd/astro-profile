---
import Layout from '@/layouts/Layout.astro';
import { AstroError } from 'astro/errors';
import { getEntry } from 'astro:content';

const { slug } = Astro.params;
const { currentLocale } = Astro;

const data = await getEntry('projects', currentLocale + '/' + slug);

if (!data) {
  throw new AstroError(`Project ${slug} does not exist!`);
}

const { Content } = await data.render();
---

<Layout title={`Project ${slug}`}>
  <section class='prose prose-invert mx-auto w-full max-w-screen-lg pt-10'>
    <Content />
  </section>
</Layout>
